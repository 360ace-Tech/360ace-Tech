############################################
# Public site config
############################################
NEXT_PUBLIC_SITE_URL=https://360ace.tech
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MAINTENANCE=false
# Optional: ISO timestamp for countdown (e.g., 2025-12-31T23:59:59Z)
NEXT_PUBLIC_REOPEN_AT=

############################################
# Contact + Email (SendGrid)
############################################
SENDGRID_API_KEY=
CONTACT_TO_EMAIL=hello@example.com
CONTACT_FROM_EMAIL=no-reply@example.com
CONTACT_SUBJECT_PREFIX="New contact from 360ace.tech:"

############################################
# reCAPTCHA v2 (default)
# Public site key and secret for server verification
############################################
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET=
NEXT_PUBLIC_RECAPTCHA_MODE=visible # visible | invisible

# Optional: reCAPTCHA Enterprise (leave blank if using v2)
# If RECAPTCHA_SECRET is not set and these are provided, Enterprise will be used.
NEXT_PUBLIC_RECAPTCHA_ENTERPRISE_SITE_KEY=
RECAPTCHA_ENTERPRISE_PROJECT_ID=
RECAPTCHA_MIN_SCORE=0.5
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_APPLICATION_CREDENTIALS_JSON=
GCP_CLIENT_EMAIL=
GCP_PRIVATE_KEY=

############################################
# Anti-spam timing (milliseconds)
############################################
CONTACT_MIN_SUBMIT_MS=2000
